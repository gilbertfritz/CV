<section id="resume">
    {% for section in page.header.sections %}
        <div class="row {{ section.css_class }}">
            <div class="three columns header-col">
                <h1><span>{{ section.title }}</span></h1>
            </div>
            <div class="nine columns main-col">
                {% for item in section.items %}
                    <div class="row item">
                        <div class="twelve columns">
                            {% if item.title %}
                                <h3>{{ item.title }}</h3>
                            {% endif %}
                            <p class="info">{{ item.info }}
                            {% if item.date %}
                                <span>&bull;</span> <em class="date">{{ item.date }}</em>
                            {% endif %}
                            </p>
                            <p>
                                {{ item.description }}
                            </p>
                            {% if item.dlurl %}
                                <p class="buttonparagraph">
                                    <a href="{{ item.dlurl }}" class="button"><i class="fa fa-download"></i>{{ item.dldescr }}</a>
                                </p>
                            {% endif %}

                            {% if item.skills %}
                                <div class="bars">
                                    <ul class="skills">
                                        {% for skill in item.skills %}
                                            <li><span class="bar-expand" style="width: {{ skill.level }}%;animation: {{ skill.name|lower }} 2s ease;"></span><em>{{ skill.name }}</em></li>
                                                {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</section>
